{
    "name": "moji",
    "displayName": "üêâ moji",
    "description": "a dashboard plugin inspired by alpha.nvim",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.93.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "moji.startup",
                "title": "moji: Startup"
            },
            {
                "command": "moji.toggle",
                "title": "moji: Toggle"
            }
        ],
        "configuration": {
            "title": "moji",
            "properties": {
                "moji.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/Disable moji"
                },
                "moji.header": {
                    "type": "string",
                    "default": "moji",
                    "description": "Header to display in the moji cockpit"
                },
                "moji.image": {
                    "type": "string",
                    "default": "kanagawa",
                    "description": "Image to display in the moji cockpit"
                },
                "moji.commands": {
                    "type": "array",
                    "default": [
                        {
                            "key": "q",
                            "title": "Quit",
                            "command": "workbench.action.quit"
                        },
                        {
                            "key": "c",
                            "title": "Close",
                            "command": "workbench.action.closeWindow"
                        },
                        {
                            "key": "r",
                            "title": "Recent",
                            "command": "workbench.action.openRecent"
                        }
                    ],
                    "description": "Startup commands for the moji dashboard"
                },
                "moji.autostart": {
                    "type": "string",
                    "default": "emptyWorkspace",
                    "enum": [
                        "emptyWorkspace",
                        "always"
                    ],
                    "description": "When to start moji",
                    "enumDescriptions": [
                        "Start moji when opening an empty workspace",
                        "Always start moji"
                    ]
                },
                "moji.font": {
                    "type": "string",
                    "default": "monospace",
                    "description": "Font to use in the moji cockpit. You must set this if you would like to use nerd icons"
                }
            }
        }
    },
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "vscode:prepublish": "npm run compile"
    },
    "devDependencies": {
        "@types/node": "18.x",
        "@types/vscode": "^1.93.0",
        "typescript": "^5.4.5"
    }
}
