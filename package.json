{
    "name": "radix",
    "displayName": "radix",
    "description": "a diff base",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.93.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "radix.startup",
                "title": "Radix: Startup"
            },
            {
                "command": "radix.toggle",
                "title": "Radix: Toggle"
            }
        ],
        "configuration": {
            "title": "Radix",
            "properties": {
                "radix.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable/Disable Radix"
                },
                "radix.cockpitImage": {
                    "type": "string",
                    "description": "Image to display in the Radix cockpit"
                },
                "radix.commands": {
                    "type": "array",
                    "default": [
                        {
                            "title": "Quit VSCode",
                            "command": "workbench.action.quit"
                        }
                    ],
                    "description": "Startup commands for the Radix dashboard"
                },
                "radix.autostart": {
                    "type": "string",
                    "default": "emptyWorkspace",
                    "enum": [
                        "emptyWorkspace",
                        "always"
                    ],
                    "description": "When to start Radix",
                    "enumDescriptions": [
                        "Start Radix when opening an empty workspace",
                        "Always start Radix"
                    ]
                }
            }
        }
    },
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "vscode:prepublish": "npm run compile"
    },
    "devDependencies": {
        "@types/node": "18.x",
        "@types/vscode": "^1.93.0",
        "typescript": "^5.4.5"
    }
}
